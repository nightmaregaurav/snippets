current_script_dir=$(dirname "${BASH_SOURCE[0]}")

source $current_script_dir/rc.d/envs
source $current_script_dir/rc.d/aliases
source $current_script_dir/rc.d/functions

# save external IP Address to a file
rm -f ~/.extip
touch ~/.extip
(set_public_ip_to_extip_file &) > /dev/null 2>&1

# hide EOL sign ('%')
PROMPT_EOL_MARK=""

# Configure `time` format
TIMEFMT=$'\nreal\t%E\nuser\t%U\nsys\t%S\ncpu\t%P'

# Expand the history size
export HISTFILESIZE=10000
export SAVEHIST=10000
export HISTSIZE=2000

# Set history file
export HISTFILE=~/.history

if [[ $BASH_VERSION == "" ]]; then
  source $current_script_dir/rc.d/zshrc
elif [[ $ZSH_VERSION == "" ]]; then
  source $current_script_dir/rc.d/bashrc
else
  return
fi;